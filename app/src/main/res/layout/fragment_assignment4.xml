<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ccc"
    tools:context=".fragment.Assignment4">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:background="#1169E6"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/juboraj_sarker"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Juboraj Sarker"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tv_android_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Android Application Developer"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="18sp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/layout_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_address"
                        android:padding="8dp"
                        android:background="#1169E6"
                        app:tint="#fff" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uttara, Sector-03, Dhaka-1230"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:padding="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_email"
                        android:padding="8dp"
                        android:background="#1169E6"
                        app:tint="#fff" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="juborajsarker001@gmail.com"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:padding="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_call"
                        android:padding="8dp"
                        android:background="#1169E6"
                        app:tint="#fff" />

                    <TextView
                        android:id="@+id/tv_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+88 01938365335"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:padding="5dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1169E6"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>


                <LinearLayout
                    android:id="@+id/layout_linkedin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/linkedin"
                        android:padding="8dp"
                        android:background="#1169E6"
                        app:tint="#fff" />

                    <TextView
                        android:id="@+id/tv_linkedin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="linkedin.com/in/juboraj-sarker"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:padding="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_github"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/github"
                        android:padding="8dp"
                        android:background="#1169E6"
                        app:tint="#fff" />

                    <TextView
                        android:id="@+id/tv_github"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="github.com/Juboraj-Sarker"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:padding="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/facebook"
                        android:padding="8dp"
                        android:background="#1169E6"
                        app:tint="#fff" />

                    <TextView
                        android:id="@+id/tv_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="facebook.com/raj.cse.ju"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:padding="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_web"
                        android:padding="8dp"
                        android:background="#1169E6"
                        app:tint="#fff" />

                    <TextView
                        android:id="@+id/tv_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="www.juborajsarker.com"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:padding="5dp"/>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>